## Generated by Ansible (freedns)

## FreeDNS configuration
#  REF: https://github.com/cedric-dufour/scriptisms/blob/master/system/freedns-v2.conf

# Use HTTPS
ssl = {{ FREEDNS_SSL|bool | ternary('true', 'false') }}

# FreeDNS subdomain update token
# (as in 'https://sync.afraid.org/u/<token>/')
{% if FREEDNS_TOKEN|length %}
token = "{{ FREEDNS_TOKEN }}"
{% else %}
# REQUIRED!!!
{% endif %}

# IP address
[address]
# Perform IPv6 update
ipv6 = {{ FREEDNS_ADDRESS_IPV6|bool | ternary('true', 'false') }}

# External IP address checker script
{% if FREEDNS_ADDRESS_CHECK|length %}
check = "{{ FREEDNS_ADDRESS_CHECK }}"
{% else %}
# (disabled)
{% endif %}

# Update period (in seconds)
[period]
# Update loop (0 = run once and exit)
loop = {{ FREEDNS_PERIOD_LOOP }}

# Forced update (0 = disabled)
# (even when externally-retrieved IP address hasn't changed)
{% if FREEDNS_ADDRESS_CHECK|length %}
force = {{ FREEDNS_PERIOD_FORCE }}
{% else %}
# (not applicable)
{% endif %}
